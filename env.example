# Server Configuration
PORT=3000
NODE_ENV=development

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repository_name
GITHUB_BRANCH=main

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=your_imagekit_url_endpoint

# File Upload Configuration
MAX_FILE_SIZE=500000000
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed
THUMBNAIL_FOLDER=thumbnails

# Processing Mode
# Set to 'github' to push uploads to the GitHub repo and let Actions process
# Set to 'gofile' to upload to Gofile and trigger workflow_dispatch with URL
# Set to 'local' to process on this server
PROCESSING_MODE=gofile

# Gofile Configuration (optional)
# Override upload host (default: https://upload.gofile.io)
GOFILE_UPLOAD_HOST=https://upload.gofile.io
# If you have a token and premium, you can later enable direct link creation
# GOFILE_API_TOKEN=your_gofile_api_token

# Control whether server dispatches the workflow after gofile upload
DISPATCH_WORKFLOW=true

# Video Processing Configuration
MAX_VIDEO_SIZE=98000000
THUMBNAIL_TIME=2
